<h1>Restaurants#show</h1>
<p>Find me in app/views/restaurants/show.html.erb</p>
<%= link_to "+ add new review", new_restaurant_review_path(params[:id]) %>


<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
    <li class="list-group-item"><%= review.rating %></li>
     <%= link_to "Delete",
    review_path(review),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
  <% end %>
</ul>
<br>
